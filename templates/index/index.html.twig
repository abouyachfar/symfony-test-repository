{% extends 'base.html.twig' %}
{% block title %}Liste des commits{% endblock %}

{% block body%}
<div class="container">
<h1 class="page-header text-start">Commits List</h1>
<a class="btn btn-primary text-end" href="/loadcommits" title="Click for loading new commits from GitHub" >Charge New Commits</a>

<br/><br/>

<div class="card">
	<div class="card-header">
		Search By
	</div>

	<div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <form id="frm" name="frm" action="/search" method="GET">
                        <label for="txtname">Committer Name</label>
                        <input class="form-control" id="author" name="author" />
                        <input type="submit" id="search" class="btn btn-primary" value="Search"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br/><br/>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Commiter Name</th>
            <th>Committer Email</th>
            <th>Commit URL</th>
        <tr>
    </thead>
    <tbody>
        {% for commit in commits %}
            {% if commit.sha|slice(-1) matches '/^\\d+$/' %}<tr style="background: #E6F1F6">{% else %}<tr>{% endif %}
                <td>{{ commit.id }}</td>
                <td>{{ commit.authorName }}</td>
                <td>{{ commit.authorEmail }}</td>
                <td>{{ commit.url }}</td>
            </tr>
         {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}